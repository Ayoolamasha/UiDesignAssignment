<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tabTex"
            style="@style/Widget.TextView.BodyMedium16"
            android:textSize="@dimen/caption_text_size_12"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="All"
            android:textColor="@color/color_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <LinearLayout
            android:id="@+id/badgeIcon"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@drawable/orange_button_background"
            android:paddingStart="@dimen/padding_7"
            android:paddingEnd="@dimen/padding_7"
            android:paddingTop="@dimen/padding_1"
            android:paddingBottom="@dimen/padding_1"
            android:layout_marginStart="@dimen/margin_3"
            app:layout_constraintStart_toEndOf="@id/tabTex"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/badgeCount"
                style="@style/Widget.TextView.BodyMedium16"
                android:textSize="@dimen/caption_text_size_12"
                tools:text="12"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
